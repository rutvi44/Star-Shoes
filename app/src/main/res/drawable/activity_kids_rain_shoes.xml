<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KidsRainShoes">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- First Rain Boot -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#B767C8">

            <!-- Image of the First Rain Boot -->
            <ImageView
                android:layout_width="396dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rainboot1" />

            <!-- Name of the First Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fendi shoes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Description of the First Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Available in various colors"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the First Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $25.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Checkbox to Add to Cart -->
            <CheckBox
                android:id="@+id/checkbox_boot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Second Rain Boot -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#4CE86D">

            <!-- Image of the Second Rain Boot -->

            <!-- Name of the Second Rain Boot -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rainboot2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prada Rain Boot"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Description of the Second Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Waterproof and comfortable"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the Second Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $30.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Checkbox to Add to Cart -->
            <CheckBox
                android:id="@+id/checkbox_boot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Third Rain Boot -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#69B5B2">

            <!-- Image of the Third Rain Boot -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rainboot3" />

            <!-- Name of the Third Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LV  Rain boot"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Description of the Third Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Cute and stylish design"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the Third Rain Boot -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $34.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Checkbox to Add to Cart -->
            <CheckBox
                android:id="@+id/checkbox_boot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Button to Add Selected Rain Boots to Cart -->
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:layout_marginTop="16dp" />

        <!-- Button to Proceed to Checkout -->
        <Button
            android:id="@+id/button_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
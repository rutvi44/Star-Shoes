<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KidsLightUpShoes">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- First Light-up Shoe -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#B767C8">

            <!-- Image of the First Light-up Shoe -->
            <ImageView
                android:layout_width="396dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lightup1" />

            <!-- Name of the First Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sparkle Light Shoes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Description of the First Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Glittery and colorful with LED lights"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the First Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $29.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Checkbox to Add to Cart -->
            <CheckBox
                android:id="@+id/checkbox_shoe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Second Light-up Shoe -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#4CE86D">

            <!-- Image of the Second Light-up Shoe -->

            <!-- Name of the Second Light-up Shoe -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lightup2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neon Glow Shoes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Description of the Second Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Bright neon colors with flashing lights"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the Second Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $34.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Checkbox to Add to Cart -->
            <CheckBox
                android:id="@+id/checkbox_shoe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Third Light-up Shoe -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#69B5B2">

            <!-- Image of the Third Light-up Shoe -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lightup3" />

            <!-- Name of the Third Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glow-in-the-Dark Shoes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Description of the Third Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Illuminates in the dark with various patterns"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the Third Light-up Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $39.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Checkbox to Add to Cart -->
            <CheckBox
                android:id="@+id/checkbox_shoe3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Button to Add Selected Light-up Shoes to Cart -->
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:layout_marginTop="16dp" />

        <!-- Button to Proceed to Checkout -->
        <Button
            android:id="@+id/button_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
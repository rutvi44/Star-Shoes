<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WomenWedges">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- First Shoe -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#B767C8">

            <!-- Image of the First Shoe -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sandel2prada" />

            <!-- Description of the First Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="prada wedge"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Available Sizes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Sizes: 6, 7, 8, 9"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the First Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $125.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />
            <CheckBox
                android:id="@+id/checkbox_shoe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Second Shoe -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#4CE86D">

            <!-- Image of the Second Shoe -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sweet2wedge" />

            <!-- Description of the Second Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sweet Wedge"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Available Sizes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Sizes: 5, 6, 7, 8, 9"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the Second Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $130.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />
            <CheckBox
                android:id="@+id/checkbox_shoe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Third Shoe -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#69B5B2">

            <!-- Image of the Third Shoe -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/michealcoroswedegs1" />

            <!-- Description of the Third Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Women's Elegant wedges Shoes from aldo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Available Sizes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Sizes: 6, 7, 8"
                android:textSize="16sp"
                android:padding="8dp" />

            <!-- Price of the Third Shoe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $34.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />
            <CheckBox
                android:id="@+id/checkbox_shoe3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="8dp" />

        </LinearLayout>
        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:layout_marginTop="16dp" />

        <!-- Checkout Button -->
        <Button
            android:id="@+id/button_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</ScrollView>
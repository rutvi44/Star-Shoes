<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Group6_PROG3210_FinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color for the app -->
        <item name="colorPrimary">@color/ColorDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <!-- Background color for the entire app -->
        <item name="android:windowBackground">@color/light </item>
        <!-- This is the color that will be used for the default text and icons. -->
        <item name="android:textColor">@color/ColorDark</item>
         This is the color of UI elements such as buttons, checkboxes, etc.
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <!-- Status bar color in your activities -->
        <item name="android:statusBarColor" tools:targetApi="l">#d9d3ce</item>
        <!-- Customize your theme with other attributes like fonts, corner radius, etc. -->
        <item name="colorAccent">@color/ColorDark</item>

        <item name="materialButtonStyle">@style/Custom.MaterialButton</item>

    </style>

    <!-- Shape Appearance for rounded corners -->
    <style name="Custom.ShapeAppearance.MaterialButton.Rounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">15dp</item> <!-- Rounded corners with 100dp radius -->
    </style>

    <!-- Custom Button Style -->
    <style name="Custom.MaterialButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/light</item> <!-- Set button text color to red -->
        <item name="android:textSize">18dp</item>
        <item name="shapeAppearance">@style/Custom.ShapeAppearance.MaterialButton.Rounded</item> <!-- Apply rounded shape -->
    </style>


</resources>
